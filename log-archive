#!/bin/bash

# Check if log directory argument is provided
if [ -z "$1" ]; then
  echo "Usage: log-archive <log-directory>"
  exit 1
fi

LOG_DIR="$1"

# Check if the directory exists
if [ ! -d "$LOG_DIR" ]; then
  echo "Error: Directory does not exist."
  exit 1
fi

# Directory to store archives
ARCHIVE_DIR="$HOME/log-archives"
mkdir -p "$ARCHIVE_DIR"

# Timestamp for archive name
TIMESTAMP=$(date +"%Y%m%d_%H%M%S")
ARCHIVE_NAME="logs_archive_${TIMESTAMP}.tar.gz"

# Compress logs
tar -czf "$ARCHIVE_DIR/$ARCHIVE_NAME" "$LOG_DIR"

# Log archive activity
echo "Archived $LOG_DIR on $(date)" >> "$ARCHIVE_DIR/archive.log"

# Success message
echo "Logs successfully archived:"
echo "$ARCHIVE_DIR/$ARCHIVE_NAME"
